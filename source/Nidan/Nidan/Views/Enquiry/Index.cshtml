@using Nidan.Extensions
@using Nidan.Extensions
@{
    ViewBag.Title = "Enquiry";
}
<div ng-controller="EnquiryController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Enquiries <small></small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchEnquiry(searchField)" class="form-control" placeholder="Search for Enquiry...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" ng-click="model.searchEnquiry(searchField)" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInAnyRoles("Admin"))
    {
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-app" href="@Url.Action("Create", "Enquiry")">
                    <i class="fa fa-user"></i> Create
                </a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Enquiries<small></small>
                    </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th ng-click="model.order('CandidateName')" ng-class="model.orderClass('CandidateName')">Candidate Name</th>
                                            <th ng-click="model.order('ContactNo')" ng-class="model.orderClass('ContactNo')">Contact No</th>
                                            <th ng-click="model.order('EmailId')" ng-class="model.orderClass('EmailId')">Email Id</th>
                                            <th ng-click="model.order('CourseOffered')" ng-class="model.orderClass('CourseOffered')">Course Offered</th>
                                            <th ng-click="model.order('Remarks')" ng-class="model.orderClass('Remarks')">Remarks</th>
                                            <th ng-click="model.order('FollowUpDate')" ng-class="model.orderClass('FollowUpDate')">Follow-Up Date</th>
                                            <th ng-click="model.order('EnquiryStatus')" ng-class="model.orderClass('EnquiryStatus')">Enquiry Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="person in model.enquiries" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.viewEnquiry(enquiry.EnquiryId)">
                                            <td><span ng-bind="person.CandidateName"></span></td>
                                            <td><span ng-bind="person.ContactNo"></span></td>
                                            <td><span ng-bind="person.EmailId"></span></td>
                                            <td><span ng-bind="person.CourseOffered"></span></td>
                                            <td><span ng-bind="person.Remarks"></span></td>
                                            <td><span ng-bind="person.FollowUpDate|date : format : shortDate"></span></td>
                                            <td><span ng-bind="person.EnquiryStatus"></span></td>
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                        @if (User.IsInAnyRoles("Admin"))
                                                        {
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="/Enquiry/Edit/{{person.EnquiryId}}">
                                                                    Edit
                                                                </a>
                                                            </li>

                                                            <li>
                                                                <a style="cursor: pointer;" ng-bootbox-confirm="Are you sure, you want to delete Enquiry {{person.CandidateName}}" ng-bootbox-confirm-action="model.deleteEnquiry(person.EnquiryId)" ng-bootbox-confirm-action-cancel="" ng-click="$event.originalEvent.ngClickHandled = true;">
                                                                    Delete
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Confirmation</h2>
                </div>

                <div class="modal-body">
                    <input type="hidden" ng-model='model.EnquiryId' />
                    Are you sure, you want to delete Enquiry <span ng-bind="model.EnquiryName"></span> ?
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="model.modalOk()" id="btnOK" class="btn btn-success" style="margin-bottom: 0">Ok</button>
                    <button type="button" id="btnCancel" class="btn btn-success" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
