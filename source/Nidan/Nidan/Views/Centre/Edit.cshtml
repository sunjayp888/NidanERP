                                        @*<span class="square" ng-style="{'background-color' : '#' + absenceType.Colour.Hex }"></span>*@
                                        <span><a ng-click="model.changeScheme(scheme)" ng-bind="scheme.Name"></a></span>
                                    </li>
                                </ul>
                                <button type="button" class="btn btn-success" ng-click="model.assignCentreScheme()" ng-disabled="model.assigning">Assign</button>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="text-muted font-13 m-b-30">
                </p>
