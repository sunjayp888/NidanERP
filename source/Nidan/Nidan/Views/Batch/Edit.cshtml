                        @Html.HiddenFor(model => Model.Batch.CreatedDate)
                        @Html.HiddenFor(model => model.CourseInstallment.Name)
                        @Html.HiddenFor(model => model.Course.Name)
                        @Html.HiddenFor(model => model.BatchDay.BatchDayId)
                        @Html.HiddenFor(model => model.BatchDay.CentreId)
