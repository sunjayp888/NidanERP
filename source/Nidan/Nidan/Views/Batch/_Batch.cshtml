@model Nidan.Models.BatchViewModel
<div class="form-control-required-example"> = Required</div>

<div class="form-group">
    @Html.LabelFor(model => model.Batch.SchemeId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.DropDownListFor(model => model.Batch.SchemeId, Model.Schemes, null, new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.Batch.SchemeId, "", new { @class = "help-block" })
    </div>
</div>

<div class="form-group">
     @Html.LabelFor(model => model.Batch.TrainingType, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div id="trainingtype" class="btn-group" data-toggle="buttons">
            <label class='@(Model.Batch.TrainingType == "Short Term" ? "btn btn-primary active" : "btn btn-primary")' data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                @Html.RadioButtonFor(model => model.Batch.TrainingType, "Short Term")
                <input type="radio" name="trainingtype" value="Short Term" data-parsley-multiple="gender"> &nbsp; Short Term &nbsp;
            </label>
            <label class='@(Model.Batch.TrainingType == "Long Term" ? "btn btn-primary active" : "btn btn-default")' data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                @Html.RadioButtonFor(model => model.Batch.TrainingType, "Long Term")
                <input type="radio" name="trainingtype" value="Long Term" data-parsley-multiple="gender"> Long Term
            </label>
        </div>
    </div>
</div>

